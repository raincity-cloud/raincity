{
  "name": "raincity",
  "private": true,
  "type": "module",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "format:check": "biome check .",
    "format": "biome check --write .",
    "format:staged": "biome check --write --staged --no-errors-on-unmatched --files-ignore-unknown=true",
    "lint:check": "oxlint --type-aware --type-check --ignore-path .gitignore --deny-warnings .",
    "lint": "oxlint --fix --type-aware --type-check --ignore-path .gitignore --deny-warnings .",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "prepare": "husky",
    "syncpack:lint": "syncpack lint-semver-ranges",
    "syncpack:fix": "syncpack set-semver-ranges"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,svelte,astro}": "oxlint --fix --type-aware --type-check --ignore-path .gitignore --deny-warnings"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@tsconfig/node-ts": "^23.6.4",
    "@tsconfig/node24": "^24.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.47.0",
    "oxlint-tsgolint": "^0.12.2",
    "rulesync": "^7.2.0",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
