{
  "plugins": [
    "eslint",
    "import",
    "node",
    "oxc",
    "promise",
    "typescript",
    "unicorn",
    "vitest"
  ],
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "perf": "error"
  },
  "rules": {
    "unicorn/require-module-specifiers": "off",

    "eslint/no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "zod",
            "message": "Use `zod/v4` (legacy `zod` import is disallowed)."
          }
        ]
      }
    ]
  }
}
